{
    "appId": "com.hub.b2c",
    "productName": "Hub B2C",
    "directories": {
      "output": "dist"
    },
    "files": [
      "dist/**/*",
      "client/build/**/*",
      "server/dist/**/*",
      "src/main.js"
    ],
    "win": {
      "target": ["nsis"]
    },
    "mac": {
      "target": ["dmg"]
    },
    "linux": {
      "target": ["AppImage", "deb"]
    },
    "extraResources": [
      {
        "from": "client/build/",
        "to": "client/build/",
        "filter": ["**/*"]
      },
      {
        "from": "server/dist/",
        "to": "server/dist/",
        "filter": ["**/*"]
      }
    ],
    "icon": "client/public/icon.png", 
    "compression": "normal",
    "asar": true
  }
  